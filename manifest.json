{
    "name": "Chrome Extension Demo",
    "version": "0.0.1",
    "description": "演示/测试Chrome插件功能",
    "author": "Kamas Lau",
    "homepage_url": "https://www.liuyajie.com/",
    "manifest_version": 2,
    "icons": {
        "128": "image/128x128.png"
    },

    "chrome_url_overrides": {
        "newtab": "new_tab.html"
    },

    "browser_action": {
        "default_title": "Chrome Extension Demo",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": ["*://product.dangdang.com/*"],
            "js": ["js/dangdang.js"],
            "run_at": "document_end"
        },
        
        {
            "matches": [
                "*://*.zhaopin.com/*",
                "*://i.zhaopin.com/resume*"
            ],
            "js": ["js/content.js"],
            "run_at": "document_end"
        }
    ],

    "permissions": [
        "bookmarks",
        "storage",
        "tabs",
        "https://api.imakp.liuyajie.com/"
    ],

    "options_page": "options.html"

}
